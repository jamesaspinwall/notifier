<h2>Notices</h2>
<h4><%= Time.current %></h4>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Notify chronic</th>
      <th>Repeat</th>
      <th>Notify at</th>
      <th>Sent at</th>
      <th>Cancelled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.title %></td>
        <td><%= notice.description %></td>
        <td><%= notice.notify_chronic %></td>
        <td><%= notice.repeat %></td>
        <td><%= notice.notify_at %></td>
        <td><%= notice.sent_at %></td>
        <td><%= notice.cancelled %></td>
        <td><%= link_to 'Show', notice %></td>
        <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <td><%= link_to 'Destroy', notice, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notice', new_notice_path %>
